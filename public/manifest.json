{
  "name": "LAN Video Server",
  "short_name": "LAN Video",
  "description": "Stream any video to your TV - remote control, torrents, YouTube and more",
  "start_url": "/?source=pwa",
  "id": "/",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#0a0a0a",
  "theme_color": "#0a0a0a",
  "orientation": "any",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["entertainment", "utilities", "video"],
  "iarc_rating_id": "",
  "prefer_related_applications": false,
  "icons": [
    {
      "src": "/icons/icon-72.png",
      "sizes": "72x72",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "TV Remote",
      "short_name": "Remote",
      "description": "Control your TV playback",
      "url": "/?action=remote&source=shortcut",
      "icons": [{ "src": "/icons/shortcut-remote.png", "sizes": "96x96" }]
    },
    {
      "name": "Open TV Player",
      "short_name": "TV",
      "description": "Open the TV player interface",
      "url": "/tv.html?source=shortcut",
      "icons": [{ "src": "/icons/shortcut-tv.png", "sizes": "96x96" }]
    },
    {
      "name": "Search Videos",
      "short_name": "Search",
      "description": "Search YouTube and torrents",
      "url": "/?action=search&source=shortcut",
      "icons": [{ "src": "/icons/shortcut-search.png", "sizes": "96x96" }]
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+lanvideo",
      "url": "/?video=%s"
    },
    {
      "protocol": "magnet",
      "url": "/?magnet=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/",
      "accept": {
        "video/*": [".mp4", ".mkv", ".avi", ".webm", ".mov", ".m4v"],
        "application/x-bittorrent": [".torrent"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "screenshots": [
    {
      "src": "/icons/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "TV Remote Control"
    },
    {
      "src": "/icons/screenshot-narrow.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Mobile Remote"
    }
  ]
}
